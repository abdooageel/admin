extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        h1  Admin Manger
          small  Add Admin
        ol.breadcrumb
          li
            i.fa.fa-dashboard
            a(href='/adminPage')  Dashboard
          li.active
            i.fa.fa-user  Admin Manger
          li.active
            i.fa  Add Admin
        // Add Admin
        .col-xs-10.col-xs-offset-1.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3.well.well-sm
          form#addAdmin(role='form')
            .form-group
              input.form-control#name(name='name', placeholder='Full Name', type='text')
            .form-group
              input.form-control#email(name='email', placeholder='Your Email', type='email')
            .form-group
              input.form-control#reEnterEmail(name='reEnterEmail', placeholder='Re-enter Email', type='email')
            .form-group
              input.form-control#password(name='password', placeholder='New Password', type='password')
            .form-group
              input.form-control#confirmPassword(name='confirmPassword', placeholder='Confirm Password', type='password')
            .form-group
              select.form-control.selectpicker#level(name='level')
                option(value='', style='color: grey; display:none;') Please Select Level
                option(value='1') Administration
                option(value='2') Seller  
            .row
              .col-xs-8.col-md-8
                button#btnSubmit.btn.btn-primary.btn-block Registration Admin 
              .col-xs-4.col-md-4
                button.btn.btn-danger.btn-block(type='reset') Cancel
  script(src='/js/jquery-2.1.4.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/metisMenu.min.js')
  script(src='/js/naga.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/helpers.js')
  script(src='/js/addAdmin.js')