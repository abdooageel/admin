extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header  Business Manger
            small  Type of Business
          ol.breadcrumb
            li
              i.fa.fa-dashboard
              a(href='/adminPage')  Dashboard
            li.active
              i.fa  Type of Business 
      .panel.panel-default
        .panel-heading
          .row
            .pull-left(style="margin-left: 10px;")
              .panel-title 
                strong  List Type of Business 
            .col-md-7
                form(role='search')
                  .input-group
                    input.form-control(type='text', placeholder='Search by name')
                    .input-group-btn
                      button.btn.btn-default(type='submit')
                        i.glyphicon.glyphicon-search
            .pull-right(style="margin-right: 10px;")
              a.btn.btn-success(href='#newtob', role='button',data-toggle='modal')
                span.glyphicon.glyphicon-plus
                |  Add Type of Business 
        .table-responsive
          table.table.table-condensed
            thead
              tr
                td
                  strong Name in Arabic
                td
                  strong Name in English
                td.text-center
                  strong View
                td.text-center
                  strong Edit  
                td.text-center
                  strong Trash 
              tbody#TOB
                for i in TOB
                  tr(data-id='#{i.idtob}')
                    td 
                      a.editable.editable-click(id='name#{i.idtob}', href='#', data-type='text', data-pk='#{i.idtob}') #{i.name}
                    td
                      a.editable.editable-click(id='name_en#{i.idtob}', href='#', data-type='text', data-pk='#{i.idtob}') #{i.name_en}
                    td.text-center
                      button#view.btn.btn-primary.btn-xs(value='#{i.idtob}',data-title='Edit', data-toggle='modal')
                        span.glyphicon.glyphicon-eye-open
                    td.text-center
                      button#enable.btn.btn-info.btn-xs
                        span.glyphicon.glyphicon-pencil     
                    td.text-center 
                      button#delete.btn.btn-danger.btn-xs(value='#{i.idtob}',href='#del', data-toggle='modal')
                        span.glyphicon.glyphicon-trash             
          #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-headr.modal-header-danger
                  p.h1#topid Sure you want to delete
                .modal-body
                  p.h2 Are you sure
                  p 
                .modal-footer
                  button#deletee.btn.btn-danger(type='button',data-dismiss='modal') Delete
                  button.btn.btn-success(data-dismiss='modal', type='button') Cancel
          #newtob.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
             .modal-dialog
              .modal-content
                .modal-headr.modal-header-success
                  button.close(type="button", data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") Ã— 
                  h2
                    .glyphicon.glyphicon-plus
                    |  Add Type of Business
                .row 
                  .modal-body
                    form#formtob.form-signin(role="form" , action="", method="post")
                      .col-xs-5.col-xs-offset-1.col-md-5.col-md-offset-1
                        .form-group
                          .h4 Name in Arabic
                          input#name.form-control(type="text", name="name", placeholder="Name in Arabic",autofocus="")
                      .col-xs-5.col-md-5
                        .form-group      
                          .h4 Name in English
                          input#name_en.form-control(type="text", name="name_en", placeholder="Name in English",autofocus="")
                .modal-footer
                  button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                  button#save.btn.btn-primary() Save Change 
  script(src='/js/jquery-2.1.4.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src="/js/jquery.validate.min.js")
  script(src='/js/metisMenu.min.js')
  script(src='/js/bootstrap-editable.min.js')
  script(src='/js/naga.js')
  script(src='/js/helpers.js')  
  script(src='/js/TypeofBusiness.js')
  script(src='/js/editTob.js')
  
  